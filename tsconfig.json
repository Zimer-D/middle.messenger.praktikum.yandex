{
  "include": ["src/modules.d.ts"],
  "compilerOptions": {
    "target": "ES2017",
    "module": "commonjs",
    "rootDir": "src",
    "outDir": "./dist",
    "strict": true,
    "esModuleInterop": true,
    "inlineSourceMap": true,
    "noImplicitAny": false,
    "noUnusedLocals": true,
    "noUnusedParameters": true,
    "strictNullChecks": true,
    "typeRoots": ["node_modules/@types", "src/types", "src/modules.d.ts"]
  }
}
